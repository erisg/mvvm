<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/fondosiluetas">
    <android.support.v7.widget.CardView
            android:layout_width="242dp"
            android:layout_height="355dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="238dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="240dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="73dp"
            android:layout_marginRight="73dp" app:layout_constraintVertical_bias="0.49"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp" app:cardBackgroundColor="#FFC107"
            app:cardCornerRadius="40dp" android:id="@+id/cardLogin">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="343dp">

            <ImageView
                    android:layout_width="93dp"
                    android:layout_height="93dp" app:srcCompat="@drawable/loglgin"
                    android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name_login"/>
            <EditText
                    android:layout_width="210dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:id="@+id/name_login" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="26dp"
                    android:layout_marginRight="26dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" android:background="@drawable/edit_auth"
                    android:hint="@string/email_login" android:textColorHint="@color/cardview_shadow_start_color"/>
            <EditText
                    android:layout_width="215dp"
                    android:layout_height="39dp"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_action_password"
                    android:ems="10"
                    android:id="@+id/password_login" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp"
                    android:layout_marginRight="26dp"
                    app:layout_constraintTop_toBottomOf="@+id/name_login" android:background="@drawable/edit_auth"
                    android:hint="@string/password_login" android:textColorHint="@color/cardview_shadow_start_color"
                    android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/singin_btn"
                    app:layout_constraintHorizontal_bias="0.461" android:layout_marginTop="5dp"/>
            <Button
                    android:layout_width="101dp"
                    android:layout_height="50dp"
                    android:id="@+id/singin_btn"
                    android:background="@drawable/ingresar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/password_login"/>
            <Button
                    android:layout_width="101dp"
                    android:layout_height="52dp"
                    android:id="@+id/new_user_btn"
                    app:layout_constraintTop_toBottomOf="@+id/singin_btn" android:background="@drawable/registrobuton"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:layout_marginBottom="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>